{% extends 'base.html.twig' %}

{% block title %}Habitify - Profil{% endblock %}

{% block body %}

<div class="habits__container w-full max-h-full flex flex-col">

    <div class="flex flex w-full h-full lg:flex-row flex-col">
        {# Nawigacja #}
        <div class="nav__container h-[100vh] mt-5 flex justify-center absolute hidden lg:static lg:block">
            <div class="nav__container h-full flex flex-col items-center">
                <div class="nav__name mb-16">
                    <p class="text-4xl font-bold">HABITIF<span class="main-color">Y.</span></p>
                </div>

                <div class="flex flex-col justify-between h-3/4 items-center">
                    <div class="nav__tabs flex flex-col gap-5">

                        <a class="w-auto h-auto" href="{{ path('app_dashboard') }}">
                            <div class="nav__dashboard  w-auto h-auto relative overflow-hidden">
                                <div class="nav__dashboard btn-inactive flex gap-3 justify-start items-center relative">
                                    <img class="w-5 h-5" src="{{ asset('/img/dashboard-off.svg') }}" alt="">
                                    <p>Pulpit</p>
                                </div>
                            </div>
                        </a>

                        <div class="nav__habits btn-inactive flex gap-3 justify-left items-center gap-4">
                            <a href="{{ path('app_habit') }}" class="flex gap-3 w-auto h-auto">
                                        <img src="{{ asset('img/nawyki-off.svg') }}" alt="">
                                        <p>Nawyki</p>
                            </a>
                        </div>
                        <div class="nav__summary btn-inactive flex gap-3 justify-left items-center gap-4">
                            <a href="{{ path('app_summary') }}" class="flex gap-3">
                                        <img src="{{ asset('img/podsumowanie-off.svg') }}" alt="">
                                        <p>Podsumowanie</p>
                            </a>
                        </div>
                        <div class="nav__society btn-inactive flex gap-3 justify-left items-center gap-4">
                            <a href="{{ path('app_community') }}" class="flex gap-3">
                                        <img src="{{ asset('img/spolecznosc-off.svg') }}" alt="">
                                        <p>Społeczność</p>
                            </a>
                        </div>
                        <div class="nav__profile flex gap-3 justify-left items-center gap-4">
                            <a href="{{ path('app_profile') }}" class="flex gap-3">
                                <div class="nav__dashboard  w-auto h-auto relative overflow-hidden">
                                    <div class="nav__dashboard btn-active flex gap-3 justify-start items-center relative">
                                        <img src="{{ asset('img/profil.svg') }}" alt="">
                                        <p>Mój profil</p>
                                    </div>
                                    <div class="btn__nav-dot absolute bottom-1 left-0"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="flex gap-4 cursor-pointer items-center justify-center">
                        <a href="{{ path('app_logout') }}" class="btn-logout flex gap-4 items-center justify-center">
                            <i class="logout-icon fa-solid fa-right-from-bracket text-3xl"></i><span>Wyloguj</span>
                        </a>
                    </div>
                </div>
            </div>

        </div>
        {# Nawigacja mobilna #}
        <div data-controller="mobile-menu" class="nav nav--mobile lg:hidden flex w-full justify-between h-[10vh] fixed main__background z-10">
            <div data-action="click->mobile-menu#toggle" class="burger-btn pointer w-[6em] h-[6em] ml-16 relative flex flex-col justify-center z-50">
                <div data-mobile-menu-target="bar" class="nav__btn-bar transition-all duration-500 absolute rounded-md h-[0.6em] bg-black mb-[3em] z-50"></div>
                <div class="absolute rounded-md h-[0.6em] w-full bg-black z-50"></div>
                <div data-mobile-menu-target="bar" class="nav__btn-bar transition-all duration-500 absolute rounded-md h-[0.6em] bg-black mt-[3em] right-0 z-50"></div>
            </div>
            <div class="name-page mr-16 text-[3rem] font-semibold z-50">
                <p data-mobile-menu-target="page" class="">Mój profil</p>
                <p data-mobile-menu-target="user" class="hidden static translate-x-full transition-all duration-500">{{ userData.firstname }} {{ userData.lastname }}</p>
            </div>
            <div data-mobile-menu-target="menu" class="fixed top-0 left-0 -translate-x-full transition-all duration-500 w-full h-full main__background z-[10] pt-[10vh]">
                {{ include("./shared/_nav_mobile.html.twig") }}
            </div>
        
        </div>

        {# Górny pasek z profilem #}
        <div class="w-full lg:h-[100vh]">
            <div class="nav flex w-full justify-between h-[10vh]">
                <div class="name-page ml-8 text-xl font-semibold">
                    Mój profil
                </div>

                <div class="profile flex justify-center items-center gap-4">
                    <div class="profile-text">
                        <a href="{{ path('app_profile') }}">
                            <p>{{ userData.firstname }} {{ userData.lastname }} </p>
                        </a>
                    </div>

                    <div class="profile-icon w-30 h-30">
                        <a href="{{ path('app_profile') }}">
                            {% if userData.gender == 'M' %}
                                <img src="{{ asset('/img/profile.svg') }}">
                            {% else %}
                                <img src="{{ asset('/img/profilek.svg') }}">
                            {% endif %}
                        </a>
                    </div>
                </div>
            </div>
            <div class="main-container w-full lg:h-[90vh] h-full flex flex-col">

                {# Panel główny podsumowania #}
                <div class="habits__main h-full w-full main__background flex gap-4">

                    <div class="habits__panel flex lg:flex-row flex-col gap-8 w-full h-full p-8">

                        <div class="habits__panel-l lg:w-1/3 w-full h-full flex flex-col gap-8">
                            <div class="panel__left--top lg:bg-white rounded-[40px] w-full lg:h-1/4 flex flex-col lg:p-0 p-4">
                                <div class="profile flex m-6 mb-0 items-center lg:gap-4 gap-8 w-auto">
                                    <div class="img flex lg:w-[110px] w-[12em]">
                                    {% if userData.gender == 'M' %}
                                        <img class="w-full" src="{{ asset('/img/profile.svg') }}">
                                    {% else %}
                                        <img class="w-full" src="{{ asset('/img/profilek.svg') }}">
                                    {% endif %}
                                    </div>
                                    <div class="profile-text flex w-full justify-between">
                                        <div class="profile-data">
                                            <p class="font-semibold lg:text-[1rem] text-[2.5rem]">{{ userData.firstname }} {{ userData.lastname }}</p>
                                            <p class="font-light text-[2rem] lg:text-[0.9rem]">{{ userData.email }}</p>
                                        </div>
                                        <div class="profile-date">
                                            <p class="font-light lg:text-[0.9rem] text-[2rem] mt-1">{{ userData.joinDate|date('d/m/Y') }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="level w-auto h-auto flex items-end mr-6 ml-6 mb-6 flex-col">
                                    <p class="lg:text-[0.9rem] text-[2rem]">Poziom 1</p>
                                    <div class="exp-bar main__background--gold w-3/4 lg:h-1.5 h-2.5 rounded-md"></div>
                                </div>
                            </div>
                            <div class="panel__left--bottom  lg:bg-white rounded-[40px] w-full h-3/4 lg:flex hidden items-center justify-center">
                                <div class="w-full h-full flex flex-wrap justify-center items-center m-8">
                                    <h2 class="lg:text-[1.1rem] text-[2.5rem] text-center lg:mb-0 mb-4">Wykonane nawyki według kategorii</h2>
                                    <div class="w-3/5">
                                    {{ render_chart(chart) }}
                                    </div>
                                    <div class="legend flex flex-wrap w-full gap-4 text-[1rem]">
                                        <div class="flex gap-4">
                                            <div class="bg-[#466EA0] w-12 h-6 rounded-md"></div>
                                            <p>Zdrowie</p>
                                        </div>
                                        <div class="flex gap-4">
                                            <div class="bg-[#96BE46] w-12 h-6 rounded-md"></div>
                                            <p>Relaks</p>
                                        </div>
                                        <div class="flex gap-4">
                                            <div class="bg-[#F0BE46] w-12 h-6 rounded-md"></div>
                                            <p>Aktywność społeczna</p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="habits__panel-r w-full lg:w-2/3 h-full lg:bg-white rounded-[40px] p-8">
                            <div class="flex flex-col w-full h-full overflow-hidden">
                            <h2 class="lg:text-[1.1rem] text-[3.5rem] text-left lg:mb-0 mb-12">Osiągnięcia</h2>
                                <div class="overflow-y-auto w-full h-full flex-1">

                                    <div class="w-full h-auto mb-4 flex flex-col lg:gap-2 gap-4" data-controller="accordion">
                                        <div class="profile__regularity achievement__header flex border lg:border-gray-200 border-gray-300 rounded-3xl lg:rounded-2xl cursor-pointer" data-action="click->accordion#toggleRegularity">
                                            <div class="flex items-center justify-between w-full text-[1.1rem] font-semibold m-4 lg:p-0 pt-4 pb-4">
                                                <div class="title flex gap-16 lg:gap-4 items-center ml-4">
                                                    <img class="lg:w-10 w-[4em]" src="{{ asset('/img/regularnosc.svg') }}" alt="">
                                                    <h1 class="lg:text-[1.1rem] text-[2.5rem]">Regularność</h1>
                                                </div>
                                                <div class="dropdown-icon flex mr-6 gap-16">
                                                    <div class=" text-[1rem] ml-6 flex items-center justify-center lg:gap-4 gap-12">
                                                    <p class="lg:text-[1rem] text-[2.2rem]">{{ regularity }} / 3</p>
                                                        {% if regularity == 3 %}
                                                        <div class="lg:w-4 lg:h-4 w-[2em] h-[2em] border lg:border-gray-300 border-gray-400 rounded-[50%] flex items-center justify-center bg-black">
                                                            <i class="lg:text-[1.1rem] lg:text-[0.7rem] text-white fa-solid fa-check"></i>
                                                        </div>
                                                        {% else %}
                                                        <div class="lg:w-4 lg:h-4 w-[2em] h-[2em] border lg:border-gray-300 border-gray-400 rounded-[50%] flex items-center justify-center"></div>
                                                        {% endif %}
                                                    </div>
                                                    <i class="regularity-btn fa-solid fa-chevron-right text-[2rem] lg:text-[1.1rem]" data-accordion-target="regularityIcon"></i>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="achivement__box achievement__box--regularity flex flex-col flex-wrap w-full h-full text-[1rem] hidden border lg:border-gray-200 border-gray-300 rounded-3xl lg:rounded-2xl lg:p-8 p-12 lg:gap-8 gap-16" data-accordion-target="regularityBox">

                                            <div class="achivement__item w-full lg:h-1/3 flex items-center gap-12 lg:gap-4">
                                                <div class="lg:w-11 w-[5.5em]">
                                                    {% if firstStep is not null %}
                                                    <img class="w-full" src="{{ asset('/img/firststep.png') }}" alt="">
                                                    {% else %}
                                                    <img class="w-[90%]" src="{{ asset('/img/mystery.svg') }}" alt="">
                                                    {% endif %}
                                                </div>
                                                <div class="flex justify-between items-center w-full">
                                                    <div class="">
                                                        <h2 class="lg:text-[1rem] text-[2.4rem] font-semibold">Pierwszy krok</h2>
                                                        <p class="lg:text-[1rem] text-[2.4rem]">Ukończono pierwszy dzień dobrych nawyków</p>
                                                    </div>
                                                    {% if firstStepShare is not null and firstStepShare == 0 %}
                                                    <div class="share-icon opacity-0 flex justify-center items-center">
                                                        <form action="{{ path('app_share') }}" method="POST" class="w-full h-full">
                                                            <input type="hidden" name="achievement" value="1">
                                                            <button type="submit" class="w-full h-full">
                                                                <i class="text-2xl fa-solid fa-share-from-square"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            
                                            <div class="achivement__item w-full h-1/3 flex items-center lg:gap-4 gap-12">
                                                <div class="lg:w-11 w-[5.5em]">
                                                    {% if goldLife is not null %}
                                                    <img class="w-full" src="{{ asset('/img/jesien.png') }}" alt="">
                                                    {% else %}
                                                    <img class="w-[90%]" src="{{ asset('/img/mystery.svg') }}" alt="">
                                                    {% endif %}
                                                </div>
                                                <div class="flex justify-between items-center w-full">
                                                    <div class="">
                                                        <h2 class="font-semibold lg:text-[1rem] text-[2.4rem]">Złota jesień życia</h2>
                                                        <p class="lg:text-[1rem] text-[2.4rem]">Utrzymanie dowolnego nawyku przez 90 dni</p>
                                                    </div>
                                                    {% if goldLifeShare is not null and goldLifeShare == 0 %}
                                                    <div class="share-icon opacity-0 flex justify-center items-center">
                                                        <form action="{{ path('app_share') }}" method="POST" class="w-full h-full">
                                                            <input type="hidden" name="achievement" value="2">
                                                            <button type="submit" class="w-full h-full">
                                                                <i class="text-2xl fa-solid fa-share-from-square"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    {% endif %}
                                                </div>
                                            </div>

                                            <div class="achivement__item w-full h-1/3 flex items-center lg:gap-4 gap-12">
                                                <div class="lg:w-11 w-[5.5em]">
                                                    {% if warrior == true %}
                                                    <img class="w-full" src="{{ asset('/img/weekend.png') }}" alt="">
                                                    {% else %}
                                                    <img class="w-[90%]" src="{{ asset('/img/mystery.svg') }}" alt="">
                                                    {% endif %}
                                                </div>
                                                <div class="flex justify-between items-center w-full">
                                                    <div class="">
                                                        <h2 class="font-semibold lg:text-[1rem] text-[2.4rem]">Weekendowy wojownik</h2>
                                                        <p class="lg:text-[1rem] text-[2.4rem]">Wykonywanie nawyków przez miesiąc tylko w weekendy</p>
                                                    </div>
                                                    {% if warriorShare is not null and warriorShare == 0 %}
                                                    <div class="share-icon opacity-0 flex justify-center items-center">
                                                        <form action="{{ path('app_share') }}" method="POST" class="w-full h-full">
                                                            <input type="hidden" name="achievement" value="3">
                                                            <button type="submit" class="w-full h-full">
                                                                <i class="text-2xl fa-solid fa-share-from-square"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="w-full h-auto mb-4 flex flex-col gap-4 lg:gap-2" data-controller="accordion">
                                        <div class="profile__self-development achievement__header flex border lg:p-0 pt-4 pb-4 lg:border-gray-200 border-gray-300 rounded-3xl lg:rounded-2xl cursor-pointer" data-action="click->accordion#toggleDevelop">
                                            <div class="flex justify-between items-center text-[1.1rem] font-semibold w-full m-4">
                                                <div class="title flex lg:gap-4 gap-16 items-center ml-4">
                                                    <img class="lg:w-10 w-[4em]" src="{{ asset('/img/rozwoj.svg') }}" alt="">
                                                    <h1 class="lg:text-[1.1rem] text-[2.5rem]">Rozwój osobisty</h1>
                                                </div>
                                                <div class="dropdown-icon mr-6 flex gap-16">
                                                    <div class="lg:text-[1rem] text-[2.1rem] ml-6 flex items-center justify-center lg:gap-4 gap-12">
                                                        {{ selfDevelopment }} / 3
                                                        {% if selfDevelopment == 3 %}
                                                        <div class="lg:w-4 lg:h-4 w-[1em] h-[1em] border border-gray-300 rounded-[50%] flex items-center justify-center bg-black">
                                                            <i class="lg:text-[1.1rem] lg:text-[0.7rem] text-white fa-solid fa-check"></i>
                                                        </div>
                                                        {% else %}
                                                        <div class="lg:w-4 lg:h-4 w-[1em] h-[1em] border border-gray-400 lg:border-gray-300 rounded-[50%] flex items-center justify-center"></div>
                                                        {% endif %}
                                                    </div>
                                                    <i class="develop-btn fa-solid fa-chevron-right text-[2rem] lg:text-[1.1rem]" data-accordion-target="developIcon"></i>
                                                </div>
                                            </div>
                                        </div>
                                        

                                        <div class="achievement__box--develop flex flex-col flex-wrap w-full h-full text-[1rem] hidden lg:rounded-2xl rounded-3xl border lg:border-gray-200 border-gray-300 lg:p-8 p-12 lg:gap-8 gap-16" data-accordion-target="developBox">

                                            <div class="achivement__item w-full h-1/3 flex items-center gap-12 lg:gap-4">
                                                <div class="lg:w-11 w-[5.5em]">
                                                    {% if break == true %}
                                                    <img class="w-full" src="{{ asset('/img/marnotrawny.png') }}" alt="">
                                                    {% else %}
                                                    <img class="w-[90%]" src="{{ asset('/img/mystery.svg') }}" alt="">
                                                    {% endif %}
                                                </div>
                                                <div class="flex justify-between items-center w-full">
                                                    <div class="">
                                                        <h2 class="font-semibold lg:text-[1rem] text-[2.4rem]">Syn marnotrawny</h2>
                                                        <p class="lg:text-[1rem] text-[2.4rem]">Powrót po przerwie do dobrej rutyny</p>
                                                    </div>
                                                    {% if breakShare is not null and breakShare == 0 %}
                                                    <div class="share-icon opacity-0 flex justify-center items-center">
                                                        <form action="{{ path('app_share') }}" method="POST" class="w-full h-full">
                                                            <input type="hidden" name="achievement" value="4">
                                                            <button type="submit" class="w-full h-full">
                                                                <i class="text-2xl fa-solid fa-share-from-square"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            
                                            <div class="achivement__item w-full h-1/3 flex items-center gap-12 lg:gap-4">
                                                <div class="lg:w-11 w-[5.5em]">
                                                    {% if newRoutine == true %}
                                                    <img class="w-full" src="{{ asset('/img/rutyna.png') }}" alt="">
                                                    {% else %}
                                                    <img class="w-[90%]" src="{{ asset('/img/mystery.svg') }}" alt="">
                                                    {% endif %}
                                                </div>
                                                <div class="flex justify-between items-center w-full">
                                                    <div class="">
                                                        <h2 class="font-semibold lg:text-[1rem] text-[2.4rem]">Nowa rutyna</h2>
                                                        <p class="lg:text-[1rem] text-[2.4rem]">Dodaj nowy nawyk po 30 dniach</p>
                                                    </div>
                                                    {% if newRoutineShare is not null and newRoutineShare == 0 %}
                                                    <div class="share-icon opacity-0 flex justify-center items-center">
                                                        <form action="{{ path('app_share') }}" method="POST" class="w-full h-full">
                                                            <input type="hidden" name="achievement" value="5">
                                                            <button type="submit" class="w-full h-full">
                                                                <i class="text-2xl fa-solid fa-share-from-square"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    {% endif %}
                                                </div>
                                            </div>

                                            <div class="achivement__item w-full h-1/3 flex items-center gap-12 lg:gap-4">
                                                <div class="lg:w-11 w-[5.5em]">
                                                    {% if ownHabit == true %}
                                                    <img class="w-full" src="{{ asset('/img/kreator.png') }}" alt="">
                                                    {% else %}
                                                    <img class="w-[90%]" src="{{ asset('/img/mystery.svg') }}" alt="">
                                                    {% endif %}
                                                </div>
                                                <div class="flex justify-between items-center w-full">
                                                    <div class="">
                                                        <h2 class="font-semibold lg:text-[1rem] text-[2.4rem]">Kreator rzeczywistości</h2>
                                                        <p class="lg:text-[1rem] text-[2.4rem]">Stwórz własny nawyk do śledzenia</p>
                                                    </div>
                                                    {% if ownHabitShare is not null and ownHabitShare == 0 %}
                                                    <div class="share-icon opacity-0 flex justify-center items-center">
                                                        <form action="{{ path('app_share') }}" method="POST" class="w-full h-full">
                                                            <input type="hidden" name="achievement" value="6">
                                                            <button type="submit" class="w-full h-full">
                                                                <i class="text-2xl fa-solid fa-share-from-square"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="w-full h-auto flex flex-col lg:gap-2 gap-4" data-controller="accordion">
                                        <div class="profile__quantity achievement__header flex border lg:p-0 pt-4 pb-4 lg:border-gray-200 border-gray-300 rounded-3xl lg:rounded-2xl cursor-pointer" data-action="click->accordion#toggleQuantity">
                                            <div class="flex items-center justify-between text-[1.1rem] font-semibold w-full m-4 ml-10">
                                                <div class="title flex lg:gap-4 gap-16 items-center">
                                                    <img class="lg:w-8 w-[3.5em]" src="{{ asset('/img/liczba.svg') }}" alt="">
                                                    <h1 class="lg:text-[1.1rem] text-[2.5rem]">Liczba nawyków</h1>
                                                </div>
                                                <div class="dropdown-icon mr-6 flex gap-16">
                                                    <div class="lg:text-[1rem] text-[2.1rem] ml-6 flex items-center justify-center lg:gap-4 gap-12">
                                                        {{ multitasking }} / 3
                                                        {% if multitasking == 3 %}
                                                        <div class="lg:w-4 lg:h-4 w-[1em] h-[1em] border border-gray-400 lg:border-gray-300 rounded-[50%] flex items-center justify-center bg-black">
                                                            <i class="text-[1.3rem] lg:text-[0.7rem] text-white fa-solid fa-check"></i>
                                                        </div>
                                                        {% else %}
                                                        <div class="lg:w-4 lg:h-4 w-[1em] h-[1em] border border-gray-400 lg:border-gray-300 rounded-[50%] flex items-center justify-center"></div>
                                                        {% endif %}
                                                    </div>
                                                    <i class="quantity-btn fa-solid fa-chevron-right text-[2rem] lg:text-[1.1rem]" data-accordion-target="quantityIcon"></i>
                                                </div>
                                            </div>
                                        </div>
                                        

                                        <div class="achievement__box achievement__box--quantity flex flex-col flex-wrap w-full h-full text-[1rem] hidden border border-gray-300 lg:border-gray-200 lg:rounded-2xl rounded-3xl lg:p-8 p-12 lg:gap-8 gap-16" data-accordion-target="quantityBox">

                                            <div class="achivement__item h-1/3 w-full flex items-center gap-12 lg:gap-4">
                                                <div class="lg:w-11 w-[5.5em]">
                                                    {% if multi == true %}
                                                    <img class="w-full" src="{{ asset('/img/multi.png') }}" alt="">
                                                    {% else %}
                                                    <img class="w-[90%]" src="{{ asset('/img/mystery.svg') }}" alt="">
                                                    {% endif %}
                                                </div>
                                                <div class="flex justify-between items-center w-full">
                                                    <div class="">
                                                        <h2 class="font-semibold lg:text-[1rem] text-[2.4rem]">Multizadaniowiec</h2>
                                                        <p class="lg:text-[1rem] text-[2.4rem]">Śledzenie +3 nawyków</p>
                                                    </div>
                                                    {% if multiShare is not null and multiShare == 0 %}
                                                    <div class="share-icon opacity-0 flex justify-center items-center">
                                                        <form action="{{ path('app_share') }}" method="POST" class="w-full h-full">
